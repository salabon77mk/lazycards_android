<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:id="@+id/vocab_word_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_vocab_hint"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <EditText
        android:id="@+id/main_fragment_tags_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tags"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/current_deck_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:padding="16dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="@string/no_deck_selected"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/get_decks_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_decks"/>


    </LinearLayout>


    <Button
        android:id="@+id/submit_word_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button" />

    <Button
        android:id="@+id/TMP_network_scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TMP_network_scan"/>

</LinearLayout>